<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Date Picker"
             x:Class="ControleXamarinForms.Controls.DatePickerPage">
    <ContentPage.Content>
        <StackLayout>
            <DatePicker
                TextColor="Red"
                Format="dd/MM/YYYY"
                MinimumDate="01/01/2002"
                DateSelected="DatePicker_DateSelected"
                MaximumDate="01/01/2018" />
            <Label x:Name="LblResultado" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>