<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="TableView"
             x:Class="ControleXamarinForms.Controls.TableViewPage">
    <ContentPage.Content>
        <StackLayout>
            <TableView Intent="Settings">
                <TableRoot>
                    <TableSection Title="Backup">
                        <SwitchCell Text="Backup das Imagens" On="False"></SwitchCell>
                        <SwitchCell Text="Backup dos Texto" On="False"></SwitchCell>
                        <SwitchCell Text="Backup dos Chats" On="False"></SwitchCell>
                        <ViewCell>
                            <StackLayout Orientation="Horizontal">
                                <Label Text="Backup Frequencia"></Label>
                                <Slider HorizontalOptions="FillAndExpand" Minimum="0" Maximum="7"></Slider>
                            </StackLayout>
                        </ViewCell>
                    </TableSection>
                    <TableSection Title="Segurança">
                        <SwitchCell Text="Senhas cliptografadas" On="True"></SwitchCell>
                    </TableSection>
                </TableRoot>
            </TableView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>